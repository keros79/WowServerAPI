GET /bandNo/{bandNo}/post/{postNo}
지정된 게시글의 본문 요청 api

Request Parameter
{
  "locale":string, // 언어 [ko|en|jp|zh...]
  "withoutBody":Boolean, // (optional) 본문 포함 여부 (default는 본문 포함임)
}

Response
{
  "apiVer":string, // rest api 버전 ("1.0")
  "band":
  {
    "bandNo":number,
    "adminId":stringArray
    [], // 이 밴드의 어드민 아이디 (내 아이디와 비교해서 권한 획득)
    "name":string, // 이 밴드 이름
  },
  "ownerId":string, // 작성자 아이디
  "ownerName":string, // 작성자 이름
  "ownerMsg":string, // (optional) 작성자 상태 메시지
  "ownerImg":string, // (optional) 작성자의 프로필 사진 주소 ("http://xxxxx/profile/{userid}.jpg")
  "modifiedAt":string, // 작성 시각 (UTC UNIX time)
  "createdAt":string, // 작성 시각 (UTC UNIX time)
  "type":string, // 게시글 타입 ["normal"|"notice"|"birth"]
  "body":objectArray // 본문 내용
  [
    { // (optional) 텍스트
      "type":"text", 
      "text":string, // 텍스트 내용 HTML (속성 포함)
    },
    { // (optional) 이미지
      "type":"image", 
      "name":string, // 이미지 파일명 
      "url":string, // 이미지 URL (ex "http://xxxxx/image/{postNo}/{filename}")
    },
    { // (optional) 동영상
      "type":"video", 
      "name":string, // 동영상 파일명 
      "url":string, // 동영상 URL (ex "http://xxxxx/vod/{postNo}/{filename}")
    },
    { // (optional) 파일
      "type":"file", 
      "name":string, // 파일명 
      "url":string, // 파일 URL (ex "http://xxxxx/file/{postNo}/{filename}")
    },
    { // (optional) 스티커
      "type":"sticker",
      "sticker":string, // 스티커
    },
    { // (optional) 투표
      "type":"vote", 
      "voteNo":number,
      "title":string, // 제목
      "content":objectArray // 투표 내용
      [
        ....
      ], 
      "url":string, // 투표 링크 url
    },
  ],
  "emoticon":objectArray // (optional) 이모티콘 리스트
  [
    {
      "owenerId":string, // 사용자 아이디
      "owenerImg":string, // 사용자 프로필 사진 주소 ("http://xxxxx/profile/{userid}.jpg")
      "emoticon":string, // 이모티콘 유니코드 
    }
  ],
  "replyCount":number, // (optional) 댓글 수 (0보다 클 경우)
  "readCount":number, // (optional) 읽은 사람 수(0보다 클 경우)
}


