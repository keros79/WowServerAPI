GET /postList/{bandNo}
{bandNo}로 지정된 밴드의 게시글 목록 요청 api (지난 목록 혹은 최근 목록 옵션)

Request Parameter
{
  "locale":string, // 언어 [ko|en|jp|zh...]
  "timestamp":number, // (optional) 지정 시간 (UTC UNIX time)
  "max":number, // (optional) 최대 요청 갯수 (default max : 10)
}

Response
{
  "apiVer":string, // rest api 버전 ("1.0")
  "band":
  {
    "adminId":stringArray
    [], // 이 밴드의 어드민 아이디 (내 아이디와 비교해서 권한 획득)
    "name":string, // 이 밴드 이름
    "type":string, // 밴드 공개여부 ["open"|"closed"]
    "category":string, // 이 밴드 카테고리
    "description":string, // (optional) 이 밴드 설명
    "image":string, // (optional) 이 밴드 대표 이미지 주소("http://xxxxx/bandProfile/{bandNo}.jpg")
    "memberCount":number, // 이 밴드의 멤버 수
  },
  "notice":objectArray // (optional) 공지 (중요공지 우선)
  [
    {
      "type":string,
      "postNo":number,
      "body":string,
    }
  ],
  "noticeCount":number, // (optional) 공지 갯수
  "post":objectArray // (optional) 최근 순서  (사이즈가 0면 아예 포함하지 않음)
  [
    {
      "owner":
      {
        "userId":string, // 작성자 아이디
        "name":string, // 작성자 이름
        "profileUrl":string, // (optional) 작성자의 프로필 사진 주소 ("/band/{bandNo}/post/{postNo}/{파일명}")
      },
      "modifiedAt":number, // 작성 시각 (UTC UNIX time)
      "createdAt":number, // 작성 시각 (UTC UNIX time)
      "postNo":number, // 게시글 번호
      "type":string, // 게시글 타입 ["normal"|"notice"|"birth"]
      "body":string, // 본문 내용
      "comment":objectArray // (optional) 게시글의 최근 댓글 2개까지
      [
        {
          "owner":
          {
            "userId":string, // 작성자 아이디
            "name":string, // 작성자 이름
            "profileUrl":string, // (optional) 작성자의 프로필 사진 주소 ("/userProfile/{userid}.jpg")
          },
          "createdAt":number, // 작성 시간 (UTC UNIX time)
          "commentNo":number, // 댓글 번호
          "content":string, // 댓글 내용 텍스트 형식
          "attachImage":stringArray // (optional) 첨부 이미지 파일주소
          [ 
            string
          ],
          "attachVideo":stringArray // (optional) 첨부 동영상 파일주소
          [ 
            string
          ],
          "attachFile":stringArray // (optional) 첨부 파일 파일주소
          [ 
            string
          ],
        }
      ],
      "emoticonCount":number, // (optional) 댓글 수 (0보다 클 경우)
      "commentCount":number, // (optional) 댓글 수 (0보다 클 경우)
      "readCount":number, // (optional) 읽은 사람 수(0보다 클 경우)
    },
  ],
}